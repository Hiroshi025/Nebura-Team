<header class="header" id="header">
  <div class="header-left">
    <button class="sidebar-toggle" id="sidebarToggle">
      <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
        <path d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z" />
      </svg>
    </button>

    <div class="search-container">
      <svg class="search-icon" viewBox="0 0 24 24">
        <path
          d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z" />
      </svg>
      <input
        type="text"
        class="search-input"
        id="searchInput"
        data-lang-placeholder="search"
        placeholder="Search by tags, categories, relations..." />
      <div class="search-filters" id="searchFilters">
        <div class="filter-tags">
          <span class="filter-tag" data-filter="api">API</span>
          <span class="filter-tag" data-filter="docs">Docs</span>
          <span class="filter-tag" data-filter="examples">Examples</span>
        </div>
        <div style="font-size: 11px; color: var(--text-secondary)">
          <span data-lang-key="search-tip">Tip: Use # for tags, @ for
            categories</span>
        </div>
      </div>
    </div>
  </div>

  <div class="header-right">
    <button class="header-btn">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
        <path
          d="M12 22c1.1 0 2-.9 2-2h-4c0 1.1.89 2 2 2zm6-6v-5c0-3.07-1.64-5.64-4.5-6.32V4c0-.83-.67-1.5-1.5-1.5s-1.5.67-1.5 1.5v.68C7.63 5.36 6 7.92 6 11v5l-2 2v1h16v-1l-2-2z" />
      </svg>
      <div class="notification-badge"></div>
    </button>

    <button class="theme-toggle" id="themeToggle">
      <span data-lang-key="theme">ðŸŒ™ Dark</span>
    </button>

    <div class="lang-selector">
      <button class="lang-toggle" id="langToggle">
        <span
          class="lang-flag"
          style="background: linear-gradient(to bottom, #c60b1e 33%, #ffc400 33%, #ffc400 66%, #c60b1e 66%)"></span>
        <span id="currentLang">ES</span>
        <span style="font-size: 10px">â–¼</span>
      </button>
      <div class="lang-dropdown" id="langDropdown">
        <div class="lang-option" data-lang="es">
          <span
            class="lang-flag"
            style="background: linear-gradient(to bottom, #c60b1e 33%, #ffc400 33%, #ffc400 66%, #c60b1e 66%)"></span>
          <span>Spanish</span>
        </div>
        <div class="lang-option" data-lang="en">
          <span
            class="lang-flag"
            style="background: linear-gradient(to bottom, #012169 33%, #ffffff 33%, #ffffff 66%, #c8102e 66%)"></span>
          <span>English</span>
        </div>
        <div class="lang-option" data-lang="ja">
          <span class="lang-flag"
            style="background: linear-gradient(to right, #ffffff 50%, #bc002d 50%)"></span>
          <span>Japanese</span>
        </div>
      </div>
    </div>

    <div class="user-profile">
      <div class="user-avatar">
        <img
          src="https://cdn.discordapp.com/avatars/{{user.discord.id}}/{{user.discord.avatar}}.png"
          alt="{{user.discord.username}}'s Avatar" />
      </div>
      <div style="display: flex; flex-direction: column">
        <div
          style="font-weight: 500; font-size: 13px">{{user.discord.username}}</div>
        <div
          style="font-size: 10px; color: var(--text-secondary)">{{user.api.role}}</div>
      </div>
    </div>
  </div>
</header>