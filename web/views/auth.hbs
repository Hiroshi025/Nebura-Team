<!doctype html>
<html lang="en" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet" />
    <link rel="stylesheet" href="/css/dashboard.css" />
    <link rel="stylesheet" href="/css/auth.css">
    <link rel="shortcut icon" href="/assets/icono.jpg" type="image/x-icon">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined"
      rel="stylesheet" />
  </head>
  <body>
    <div class="animated-bg">
      <div class="floating-particles" id="particles"></div>
    </div>
    <div class="auth-container">
      <div class="auth-logo">
        <div class="auth-logo-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
            <circle cx="12" cy="12" r="10" fill="#c147d9" />
            <text x="12" y="17" text-anchor="middle" font-size="13" fill="#fff"
              font-family="Arial" font-weight="bold">N</text>
          </svg>
        </div>
        <span class="auth-logo-text">{{subtitle}}</span>
      </div>
      <div class="auth-title" id="authTitle">Sign In</div>
      <!-- Botón para alternar entre Social/API debajo del título -->
      <div style="text-align:center; margin-bottom:16px;">
        <button type="button" id="toggleModeBtn" class="auth-btn"
          style="width:auto; padding:6px 18px; font-size:15px; margin:0;">
          Cambiar a API Login/Register
        </button>
      </div>
      <div class="auth-toggle">
        <span id="toggleText">Don't have an account?</span>
        <button type="button" id="toggleAuthBtn">Register</button>
      </div>
      <div class="alert" id="alertBox"></div>
      <form id="authForm" autocomplete="off">
        <div id="nameGroup" style="display:none;">
          <label class="form-label" for="nameInput">Name</label>
          <input type="text" class="form-control" id="nameInput"
            placeholder="Your name" autocomplete="username" />
        </div>
        <div>
          <label class="form-label" for="emailInput">Email</label>
          <input type="email" class="form-control" id="emailInput"
            placeholder="your@email.com" autocomplete="email" required />
        </div>
        <div>
          <label class="form-label" for="passwordInput">Password</label>
          <div class="password-tools">
            <input type="password" class="form-control" id="passwordInput"
              placeholder="Password" autocomplete="current-password"
              style="margin-bottom:0;" required />
            <button type="button" class="gen-pass-btn" id="genPassBtn"
              title="Generate random password">
              <span class="material-symbols-outlined"
                style="font-size:18px;">autorenew</span>
            </button>
            <button type="button" class="show-pass-btn" id="showPassBtn"
              title="Show/Hide password">
              <span class="material-symbols-outlined"
                id="showPassIcon">visibility_off</span>
            </button>
          </div>
          <!-- Password generation options -->
          <div id="genOptions"
            style="display:flex; gap:10px; margin-bottom:8px; align-items:center; flex-wrap:wrap;">
            <label style="font-size:12px;"><input type="checkbox" id="optUpper"
                checked> Uppercase</label>
            <label style="font-size:12px;"><input type="checkbox" id="optLower"
                checked> Lowercase</label>
            <label style="font-size:12px;"><input type="checkbox" id="optNumber"
                checked> Numbers</label>
            <label style="font-size:12px;"><input type="checkbox" id="optSymbol"
                checked> Symbols</label>
            <label style="font-size:12px;">Length: <input type="number"
                id="optLength" min="6" max="32" value="12"
                style="width:40px; font-size:12px;"></label>
          </div>
          <div class="password-strength" id="passwordStrength"
            style="height:12px;">
            <div class="password-strength-bar" id="strengthBar"
              style="width:0"></div>
          </div>
          <span class="strength-label" id="strengthLabel"></span>
        </div>
        <button type="submit" class="auth-btn" id="submitBtn">Sign In</button>
      </form>
      <div id="socialLoginBox">
        <div
          style="text-align:center; color:var(--text-secondary); font-size:13px; margin:8px 0 4px;">or
          continue with</div>
        <div class="social-login">
          <button class="social-btn" id="discordBtn" title="Discord">
            <!-- Discord SVG (Google Fonts style) -->
            <svg class="social-icon" viewBox="0 0 24 24" fill="none">
              <g>
                <circle cx="12" cy="12" r="12" fill="#5865F2" />
                <path
                  d="M17.5 17c-1.2-1-2.3-1-3.5-1s-2.3 0-3.5 1c-.2.2-.5.2-.7 0-.2-.2-.2-.5 0-.7 1.3-1.1 2.6-1.3 4.2-1.3s2.9.2 4.2 1.3c.2.2.2.5 0 .7-.2.2-.5.2-.7 0zM9.5 13c-.8 0-1.5-.7-1.5-1.5S8.7 10 9.5 10s1.5.7 1.5 1.5S10.3 13 9.5 13zm5 0c-.8 0-1.5-.7-1.5-1.5S13.7 10 14.5 10s1.5.7 1.5 1.5S15.3 13 14.5 13z"
                  fill="#fff" />
              </g>
            </svg>
          </button>
          <button class="social-btn" id="githubBtn" title="GitHub">
            <!-- GitHub SVG (Google Fonts style) -->
            <svg class="social-icon" viewBox="0 0 24 24" fill="none">
              <circle cx="12" cy="12" r="12" fill="#24292F" />
              <path
                d="M12 6.5c-2.8 0-5 2.2-5 5 0 2.2 1.4 4 3.3 4.7.2 0 .3-.1.3-.2v-1.1c-1.3.3-1.6-.6-1.6-.6-.2-.5-.5-.6-.5-.6-.4-.3 0-.3 0-.3.5 0 .8.5.8.5.4.8 1.1.6 1.4.5.1-.3.2-.6.4-.7-1-.1-2-.5-2-2.1 0-.5.2-.9.5-1.2-.1-.1-.2-.5 0 -1.1 0 0 .4-.1 1.2.5.4-.1.8-.2 1.2-.2s.8.1 1.2.2c.8-.6 1.2-.5 1.2-.5.2.6.1 1 .1 1.1.3.3.5.7.5 1.2 0 1.6-1 2-2 2.1.2.2.4.5.4 1v1.5c0 .1.1.2.3.2C15.6 15.5 17 13.7 17 11.5c0-2.8-2.2-5-5-5z"
                fill="#fff" />
            </svg>
          </button>
          <button class="social-btn" id="googleBtn" title="Google">
            <!-- Google SVG (Google Fonts style) -->
            <svg class="social-icon" viewBox="0 0 24 24" fill="none">
              <g>
                <circle cx="12" cy="12" r="12" fill="#fff" />
                <path
                  d="M21.6 12.2c0-.7-.1-1.4-.2-2H12v3.8h5.4c-.2 1.1-.9 2.1-1.9 2.7v2.2h3c1.7-1.6 2.7-4 2.7-6.7z"
                  fill="#4285F4" />
                <path
                  d="M12 22c2.4 0 4.4-.8 5.9-2.2l-3-2.2c-.8.5-1.8.8-2.9.8-2.2 0-4-1.5-4.7-3.5H4.1v2.2C5.6 20.2 8.6 22 12 22z"
                  fill="#34A853" />
                <path
                  d="M7.3 14.9c-.2-.5-.3-1-.3-1.6s.1-1.1.3-1.6v-2.2H4.1C3.4 11.1 3 12.5 3 14s.4 2.9 1.1 4.1l3.2-2.2z"
                  fill="#FBBC05" />
                <path
                  d="M12 7.6c1.3 0 2.4.4 3.3 1.1l2.5-2.5C16.4 4.8 14.4 4 12 4 8.6 4 5.6 5.8 4.1 7.9l3.2 2.2c.7-2 2.5-3.5 4.7-3.5z"
                  fill="#EA4335" />
              </g>
            </svg>
          </button>
        </div>
      </div>
      <!-- Improved Token Card -->
      <div id="apiTokenBox" style="display:none; margin-top:16px;">
        <div
          style="background:var(--secondary-bg); border:1.5px solid var(--nebura-purple,#c147d9); border-radius:12px; padding:18px; box-shadow:0 2px 12px rgba(193,71,217,0.10); display:flex; flex-direction:column; align-items:center;">
          <div
            style="font-size:15px; color:var(--nebura-purple,#c147d9); font-weight:700; margin-bottom:10px; display:flex; align-items:center; gap:6px;">
            <span class="material-symbols-outlined"
              style="font-size:22px;">key</span>
            API Token
          </div>
          <div
            id="tokenValue"
            style="word-break:break-all; font-size:14px; background:rgba(193,71,217,0.08); padding:10px 12px; border-radius:8px; color:#fafafa; margin-bottom:12px; width:100%; text-align:center; letter-spacing:0.5px;"></div>
          <button
            id="copyTokenBtn"
            style="background:var(--gradient-primary); color:white; border:none; border-radius:7px; padding:7px 22px; font-size:14px; font-weight:600; cursor:pointer;">
            Copy token
          </button>
          <span id="copyFeedback"
            style="font-size:12px; color:#4caf50; margin-top:7px; display:none;">Copied!</span>
        </div>
      </div>
    </div>
    <script src="/js/auth/request.js"></script>
  </body>
</html>