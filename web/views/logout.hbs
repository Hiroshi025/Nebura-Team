<html lang="en" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    {{> meta }}
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet" />
    <link rel="stylesheet" href="/css/dashboard.css" />
    <link rel="stylesheet" href="/css/logout.css" />
    <link rel="shortcut icon" href="/assets/icono.jpg" type="image/x-icon" />
  </head>
  <body>
    <div class="animated-bg">
      <div class="floating-particles" id="particles"></div>
    </div>
    <div class="logout-container">
      <div class="logout-logo">
        <div class="logout-logo-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
            <circle cx="12" cy="12" r="10" fill="#c147d9" />
            <text x="12" y="17" text-anchor="middle" font-size="13" fill="#fff"
              font-family="Arial" font-weight="bold">N</text>
          </svg>
        </div>
        <span class="logout-logo-text">Nebura</span>
      </div>
      <div class="logout-title">Session closed</div>
      <div class="logout-message">
        You have logged out successfully.<br />
        Hope to see you soon!
      </div>
      <button class="logout-btn"
        onclick="window.location.href='{{toLoginDiscord}}'">Sign in</button>
      <button
        class="logout-btn"
        style="background: var(--gradient-accent); margin-top: 0;"
        onclick="window.open('{{discordToInvite}}', '_blank')">
        Go to Discord server
      </button>
    </div>
    <script src="/js/auth/particles.js"></script>
  </body>
</html>